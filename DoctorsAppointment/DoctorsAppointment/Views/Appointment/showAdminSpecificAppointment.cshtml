 @model Appointment 
 <h1>Show Appointment</h1> 
 <table class="table table-bordered table-hover"> 
     <thead class="table-light"> 
         <tr> 
             <th>Appointment Cause</th> 
             <th>Patient Address</th> 
             <th>Date</th> 
             <th>Hour</th> 
             <th>Age</th> 
             <th>Patient Name</th> 
             <th>Phone Number</th> 
             <th colspan="2" class="text-center">Actions</th> 
         </tr> 
     </thead> 
     <tbody> 
         <tr> 
             <td>@Model.Name</td> 
             <td>@Model.Address</td> 
             <td>@Model.CreatedDate.ToString("yyyy-MM-dd")</td> 
             <td>@Model.AppointmentHour</td> 
             <td>@Model.Age</td>
             <td>@ViewBag.UserName</td>
             <td>@Model.PhoneNumber</td> 
             <td> 
                 <a href="/Appointment/modifyAppointment/@Model.Id" class="btn btn-warning btn-sm">Edit</a> 
             </td>
             <td> 
                 <a href="/Appointment/deleteAppointement/@Model.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this appointment?')">Delete</a>
             </td> 
         </tr> 
     </tbody> 
 </table> 