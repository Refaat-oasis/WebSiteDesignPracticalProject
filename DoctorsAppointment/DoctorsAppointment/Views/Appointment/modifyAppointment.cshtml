 @model Appointment 
 <h1>Modify Appointment</h1> 
 <hr /> 

 <form action="/Appointment/modifyAppointmentSave/@Model.Id" method="post"> 
     <!-- Name --> 
     <label for="Name">Name</label> 
     <input type="text" name="Name" id="Name" value="@Model.Name" class="form-check form-control" required> 
     <br /> 
     <!-- Address --> 
     <label for="Address">Address</label> 
     <input type="text" name="Address" id="Address" value="@Model.Address" class="form-check form-control" required> 
     <br /> 
     <!-- Phone Number --> 
     <label for="PhoneNumber">Phone Number</label> 
     <input type="text" name="PhoneNumber" id="PhoneNumber" value="@Model.PhoneNumber" class="form-check form-control" required> 
     <br /> 
     <!-- Appointment Date -->
    <label for="CreatedDate">Date of Appointment</label>
    <input type="date" name="CreatedDate" id="CreatedDate" value="@Model.CreatedDate" class="form-check form-control" required>
    <br /> 

     <!-- Appointment Hour --> 
     <label for="AppointmentHour">Time of Appointment</label> 
     <input type="time" name="AppointmentHour" id="AppointmentHour" value="@Model.AppointmentHour" class="form-check form-control" required> 
     <br /> 

     <!-- User Name -->
    <div class="mb-3">
        <label for="UserId" class="form-label">User Name</label>
        <select name="UserId" id="UserId" class="form-select" required>
            @foreach (User user in ViewData["users"] as List<User>)
            {
                <option value="@user.UserId">@user.Name</option>
            }
        </select>
    </div>

    <!-- Admin Name -->
    <div class="mb-3">
        <label for="AdminId" class="form-label">Admin Name</label>
        <select name="AdminId" id="AdminId" class="form-select" required>
            @foreach (Admin admin in ViewData["admins"] as List<Admin>)
            {
                <option value="@admin.AdminId">@admin.Name</option>
            }
        </select>
    </div>

     <!-- Age --> 
     <label for="Age">Age</label> 
     <input type="number" name="Age" id="Age" value="@Model.Age" class="form-check form-control" min="0"> 
     <br /> 

     <!-- Submit Button --> 
     <input type="submit" value="Modify Appointment" class="btn btn-success"> 
 </form> 
