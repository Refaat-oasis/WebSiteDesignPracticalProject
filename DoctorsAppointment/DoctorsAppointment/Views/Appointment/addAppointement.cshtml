 @model Appointment 


 <h1>Add New Appointment</h1> 
 <hr /> 

 <form action="/Appointment/addAppointmentSave" method="post"> 
     <!-- Name --> 
     <div class="mb-3"> 
         <label for="Name" class="form-label">Name</label> 
         <input type="text" name="Name" id="Name" class="form-control" required> 
     </div> 

     <!-- Address --> 
     <div class="mb-3"> 
         <label for="Address" class="form-label">Address</label> 
         <input type="text" name="Address" id="Address" class="form-control" required> 
     </div> 

     <!-- Phone Number --> 
     <div class="mb-3"> 
         <label for="PhoneNumber" class="form-label">Phone Number</label> 
         <input type="text" name="PhoneNumber" id="PhoneNumber" class="form-control" required> 
     </div> 

     <!-- Appointment Date --> 
     <div class="mb-3">
        <label for="CreatedDate" class="form-label">Date of Appointment</label>
        <input type="date" name="CreatedDate" id="CreatedDate" class="form-control" required>
    </div> 

     <!-- Appointment Hour --> 
     <div class="mb-3"> 
         <label for="AppointmentHour" class="form-label">Time of Appointment</label> 
         <input type="time" name="AppointmentHour" id="AppointmentHour" class="form-control" required> 
     </div> 

     <!-- User Name --> 
     <div class="mb-3">
        <label for="UserId" class="form-label">Patient Name</label>
        <select name="UserId" id="UserId" class="form-select" required>
            @foreach (User user in ViewData["users"] as List<User>) 
             { 
                 <option value="@user.UserId">@user.Name</option> 
             } 
         </select> 
     </div> 

     <!-- Admin Name --> 
     <div class="mb-3">
        <label for="DoctorId" class="form-label">Doctor Name</label>
        <select name="DoctorId" id="DoctorId" class="form-select" required>
            @foreach (Doctor doc in ViewData["Doctors"] as List<Doctor>) 
             { 
                 <option value="@doc.DoctorId">@doc.Name</option> 
             } 
         </select> 
     </div> 

     <!-- Age --> 
     <div class="mb-3"> 
         <label for="Age" class="form-label">Age</label> 
         <input type="number" name="Age" id="Age" class="form-control" min="0"> 
     </div> 

     <!-- Submit Button --> 
     <button type="submit" class="btn btn-success">Create New Appointment</button> 
 </form> 
